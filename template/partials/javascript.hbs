                counter2 = 0
                image2.src = image_array[counter2]
            }
            console.log(counter)
        })
        // for backward movement
        backward1.addEventListener("click", () => {

            counter2--
            if (counter2 === 1) {
                image2.src = image_array[counter2]
            }
            if (counter2 === 2) {
                image2.src = image_array[counter2]
            }
            if (counter2 === 0) {
                image2.src = image_array[counter2]
            }
            if (counter2 === -1) {
                counter2 = 2
                image2.src = image_array[counter2]
            }
            console.log(counter)
        })
        
    </script>