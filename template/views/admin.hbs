



        <!DOCTYPE html>
        <html lang="en">
        <head>
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
             <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <link rel="stylesheet" href="./css/style.css">
            <title>Document</title>
        </head>
        <body>
            <!-- Section: Design Block -->
<section class="text-center text-lg-start">
  <style>
    .middle{
     
      width: auto;
      text-align: center;
      color: black;
    }
    .cascading-right {
      margin-right: -50px;
    }

    @media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }
  </style>
{{>navbar}}
<div class="middle"><h1 >{{result.firstname}}</h1></div>
  <!-- Jumbotron -->
<form action="/admin" method="POST">
    <div class="container py-4">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">Card Details</h2>
            <form>
              <!-- 2 column grid layout with text inputs for the first and last names -->
              

              <!-- Email input -->
              <div class="form-outline mb-4">
                <input type="card_title" class="form-control" name="card_title" />
                <label class="form-label">Card Title</label>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <input type="price"  class="form-control" name="price" />
                <label class="form-label" >Price</label>
              </div>


              <!-- Submit button -->
             <div>
               <button type="submit" class="btn btn-success btn-block mx-4 mb-4">
               Add
              </button>
               <button  class="btn btn-danger btn-block  mx-4 mb-4">
                Remove
              </button>
             </div>

              <!-- Register buttons -->
             
            </form>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
        <img src="https://mdbootstrap.com/img/new/ecommerce/vertical/003.jpg" class="w-100 rounded-4 shadow-4"
          alt="" />
      </div>
    </div>
  </div>
</form>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->
{{>footer}}
{{>javascript}}
        </body>
        </html>

